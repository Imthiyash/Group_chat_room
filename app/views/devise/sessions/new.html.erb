<div style="display:flex;height:100vh;background-color:#9290C3;flex-direction:column;align-items:center;justify-content:center;">
  <div style="background-color:#535C91;border-radius:20px;font-weight:bold;color:white;box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { style: 'padding:40px;'}) do |f| %>
    <div class="mb-3 row">
      <%= f.label :email, class: 'col-sm-2 col-form-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>
    <div class="mb-3 row">
      <%= f.label :password, class: 'col-sm-2 col-form-label' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-3 row">
        <div class="col-sm-10 offset-sm-2">
          <div class="form-check">
            <%= f.check_box :remember_me, class: 'form-check-input', id: 'remember_me' %>
            <%= f.label :remember_me, class: 'form-check-label', for: 'remember_me' %>
          </div>
        </div>
      </div>
    <% end %>

    <div class="row mb-3">
      <div class="col-sm-10 offset-sm-2">
        <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
      </div>
    </div>
  <% end %>
  </div>

